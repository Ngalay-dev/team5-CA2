pipeline {
    agent {
        docker {
            image 'python:3.9'
            args '-u root'
        }
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                python --version
                pip install --upgrade pip
                pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                pytest
                '''
            }
        }
    }

    post {
        success {
            echo ' Tests passed. CI pipeline successful.'
        }
        failure {
            echo ' Tests failed. CI pipeline stopped.'
        }
    }
}

