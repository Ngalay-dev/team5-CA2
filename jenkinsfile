pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies & Run Tests (Quality Gate)') {
            agent {
                docker {
                    image 'python:3.10'
                }
            }
            steps {
                sh '''
                python --version
                pip install --upgrade pip
                pip install -r requirements.txt
                pytest
                '''
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}
